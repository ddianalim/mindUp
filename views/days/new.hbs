<body>
<style>
.body {
  background-color: #333333;
}

.new-cover {
  background: linear-gradient(90deg, rgba(255,171,183,1) 10%, rgba(255,216,187,1) 48%, rgba(255,245,187,1) 90%);
}

.breathe {
  background: linear-gradient(90deg, rgba(255,245,187,1) 10%, rgba(228,255,220,1) 48%, rgba(164,255,185,1) 90%);
}

.mindfulness {
  background: linear-gradient(90deg, rgba(164,255,185,1) 10%, rgba(213,255,253,1) 48%, rgba(166,192,255,1) 90%);
}

.gratitude {
  background: linear-gradient(90deg, rgba(166,192,255,1) 10%, rgba(164,148,255,1) 48%, rgba(255,171,183,1) 90%);
}

.section {
  min-height: 620px;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  margin: 0;
  padding-top: 5em;
}

.circle {
  height: 90px;
  width: 90px;
  margin: 12% 0;
  margin-left: 46.25%;
  border-radius: 50%;
  background-image: radial-gradient(#eee, #fff);
  animation: circle 3.5s ease-in-out alternate infinite;
}

@keyframes circle {
  0% { transform: translate(0, 0); }
  100% { transform: scale(4); }
}
</style>

<div class="container">
  <div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <div class="section new-cover col justify-content-center text-center">

          <h1 class="hello">
            Welcome back! Today is
            <script>
            var today = new Date(), dd = today.getDate(), mm = today.getMonth() + 1, month = '', yyyy = today.getFullYear();
            if (mm == 1) { month = 'January'; } else if (mm == 2) { month = 'February'; } else if (mm == 3) { month = 'March';
            } else if (mm == 4) { month = 'April'; } else if (mm == 5) { month = 'May'; } else if (mm == 6) { month = 'June';
            } else if (mm == 7) { month = 'July'; } else if (mm == 8) { month = 'August'; } else if (mm == 9) { month = 'September';
            } else if (mm == 10) { month = 'October'; } else if (mm == 11) { month = 'November'; } else { month = 'December';}
            today = month + ' ' + dd + ', ' + yyyy;
            document.write(today);
            </script>
          </h1>
        </div>
      </div>

      <div class="item">
        <div class="section breathe col justify-content-center text-center">
          <div id="progress">
            <div id="bar"></div>
            </div>
            <h2>Breathe</h2>
            <h1><time class="text-center count" style="font-size: .9em">01:00</time></h1>
            <div class="circle"></div>
        </div>
      </div>

      <div class="item">
        <div class="section mindfulness col justify-content-center text-center">
          <h2 style="margin-top: 1em!important;">Mindfulness</h2>
        <form method="POST" action="/days">
          <div class="some-margin">
            <div class="form-group col-4 col-lg-6 mx-auto">
              <label for="mindfulness">How are you feeling today?</label>
              <select name="mindfulness" id="mindfulness" class="form-control">
                  <option value="9DE09E">Happy :D</option>
                  <option value="CFE9AA">Pretty good :)</option>
                  <option value="F6F0B3">Alright :|</option>
                  <option value="F4C4A4">Not good :(</option>
                  <option value="EE9E92">Terrible :'(</option>
              </select>
            </div>

            <div class="form-group">
               <label for="feeling">I feel this way because...</label>
               <textarea name="feeling" class="form-control" id="feeling" rows="2"></textarea>
            </div>

            <div class="form-group">
               <label for="aspiration">Today I aspire to...</label>
               <textarea name="aspiration" class="form-control" id="aspiration" rows="2"></textarea>
            </div>
          </div>
        </div>
      </div>

      <div class="item">
        <div class="section gratitude">
          <div class="col justify-content-center text-center">
            <h2>Gratitude</h2>
          </div>

          <div class="row">
            <div class="col">
              <div class="some-margin">
                <div class="form-group" style="margin-top: -.5em">
                  <label for="gratitude1">This made me smile...</label>
                  <textarea name="gratitude1" class="form-control" id="gratitude1" rows="2"></textarea>
                </div>
                 <div class="form-group">
                    <label for="gratitude2">What keeps me going...</label>
                    <textarea name="gratitude2" class="form-control" id="gratitude2" rows="2"></textarea>
                 </div>
                 <div class="form-group">
                    <label for="gratitude3">I'm looking forward to...</label>
                    <textarea name="gratitude3" class="form-control" id="gratitude3" rows="2"></textarea>
                 </div>
              </div>

              <div class="text-center">
                <div class="form-group">
                  <label for="post-date">Today is:</label>
                  <input type="date" name="date" class="input-text" id="date" placeholder="mm/dd/yyyy" required>
                  <span class="validity"></span>
                </div>
                <button type="submit" class="btn btn-outline-light" style="margin-bottom: 2em;">Done</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

</body>

<script>
var h1 = document.getElementsByClassName('count')[0], seconds = 0, minutes = 1, t;
function add() {
    if (seconds == 0) {
      minutes--;
      seconds=60;
    }
    seconds--;

    h1.textContent = (minutes ? (minutes > 9 ? minutes : "0" + minutes) : "00") + ":" + (seconds > 9 ? seconds : "0" + seconds);

    if (seconds == 0 && minutes == 0) {
      exit;
    }

    timer();
}

function timer() {
    t = setTimeout(add, 1000);
}
timer();

function move() {
  var elem = document.getElementById("bar");
  var width = 1;
  var id = setInterval(frame, 600);
  function frame() {
    if (width >= 100) {
      clearInterval(id);
    } else {
      width++;
      elem.style.width = width + '%';
    }
  }
}
move();

</script>
