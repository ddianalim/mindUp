<script>
  var h1 = document.getElementsByClassName('count')[0], seconds = 0, minutes = 1, t;
  function add() {
      if (seconds == 0) {
        minutes--;
        seconds=60;
      }
      seconds--;

      h1.textContent = (minutes ? (minutes > 9 ? minutes : "0" + minutes) : "00") + ":" + (seconds > 9 ? seconds : "0" + seconds);

      if (seconds == 0 && minutes == 0) {
        exit;
      }

      timer();
  }

  function timer() {
      t = setTimeout(add, 1000);
  }
  timer();

  function move() {
    var elem = document.getElementById("bar");
    var width = 1;
    var id = setInterval(frame, 600);
    function frame() {
      if (width >= 100) {
        clearInterval(id);
      } else {
        width++;
        elem.style.width = width + '%';
      }
    }
  }
  move();

  </script>
