<div class="some-margin">

  <div style="text-align: center; margin: 10px;">

    <h2>
      <script>
        var today = new Date("{{day.date}}"), dd = today.getDate()+1, mm = today.getMonth() + 1, month = '', yyyy = today.getFullYear();
        if (mm == 1) { month = 'January'; } else if (mm == 2) { month = 'February'; } else if (mm == 3) { month = 'March';
        } else if (mm == 4) { month = 'April'; } else if (mm == 5) { month = 'May'; } else if (mm == 6) { month = 'June';
        } else if (mm == 7) { month = 'July'; } else if (mm == 8) { month = 'August'; } else if (mm == 9) { month = 'September';
        } else if (mm == 10) { month = 'October'; } else if (mm == 11) { month = 'November'; } else { month = 'December';}
        today = month + ' ' + dd + ', ' + yyyy;
        document.write(today);
      </script>
    </h2>
  </div>

  <div align="center">
    <div style="opacity: 50%; height: 100px; width: 100px; background-color: #{{day.mindfulness}};"></div>
  </div>

  <div id="mindfulnessList">
    <h4>Mindfulness</h4>
    <ul>
      <li id="feeling">Today I feel {{day.mindfulness}}</li>

    <script>
      var level = "{{day.mindfulness}}";

        function showFeelings() {
          if(level == "9DE09E") {
            document.getElementById('feeling').innerHTML = "Today I feel happy";
          } else if(level == "CFE9AA") {
            document.getElementById('feeling').innerHTML = "Today I feel pretty good";
          } else if(level == "F6F0B3") {
            document.getElementById('feeling').innerHTML = "Today I feel alright";
          } else if(level == "F4C4A4") {
            document.getElementById('feeling').innerHTML = "Today I feel not good";
          } else {
            document.getElementById('feeling').innerHTML = "Today I feel terrible";
          }
        }
        showFeelings();
      </script>

      <li>I feel this way because: {{day.feeling}}</li>
      <li>My aspiration for today: {{day.aspiration}}</li>
    </ul>
  </div>


  <div id="gratitudeList">
    <h4>Gratitude</h4>
      <ol>
          <li>{{day.gratitude1}}</li>
          <li>{{day.gratitude2}}</li>
          <li>{{day.gratitude3}}</li>
      </ol>
  </div>

  <div align="center">
    <a class="btn btn-light" href="/days">Back</a>
  </div>
</div>
